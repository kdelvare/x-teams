<!DOCTYPE html>
<html>
<head>
  <title>XTeams</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
<nav class="navbar navbar-default navbar-fixed-top" role="navigation">
  <div class="container">
    <div class="navbar-header navbar-right">Professor Xavier<br/>Teaming tool</div>
    <ul class="nav navbar-nav">
      <li class="<%= 'active' if params[:action] == 'index' %>"><%= link_to "Active teams", teams_path %></li>
      <li class="<%= 'active' if params[:action] == 'new' %>"><%= link_to "Form new team", new_team_path %></li>
      <li class="<%= 'active' if params[:action] == 'disbanded' %>"><%= link_to "Accomplished tasks", disbanded_teams_path %></li>
    </ul>
  </div>
</nav>

<div class="container">

  <%= flash_messages %>

  <%= yield %>

</div>
</body>
</html>
